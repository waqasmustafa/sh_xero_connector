<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VIEW: Form -->
    <record id="xero_invoice_inherit_form" model="ir.ui.view">
        <field name="name">xero.invoice.inherit.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Xero" name="xero">
                    <group>
                        <group>
                            <label for="sh_xero_invoice_id" string="Invoice ID" invisible="move_type not in ('out_invoice', 'in_invoice')" />
                            <field name="sh_xero_invoice_id" readonly="1" invisible="move_type not in ('out_invoice', 'in_invoice')" nolabel="1" />
                            <label for="xero_invoice_number" string="Invoice Number" invisible="move_type not in ('out_invoice', 'in_invoice')" />
                            <field name="xero_invoice_number" readonly="1" invisible="move_type not in ('out_invoice', 'in_invoice')" nolabel="1" />

                            <label for="sh_xero_credit_note_id" string="Credit Note ID" invisible="move_type not in ('out_refund', 'in_refund')" />
                            <field name="sh_xero_credit_note_id" readonly="1" invisible="move_type not in ('out_refund', 'in_refund')" nolabel="1" />
                            <label for="xero_credit_note_number" string="Credit Note Number" invisible="move_type not in ('out_refund', 'in_refund')" />
                            <field name="xero_credit_note_number" readonly="1" invisible="move_type not in ('out_refund', 'in_refund')" nolabel="1" />

                            <label for="sh_xero_manual_journal_id" string="Manual Journal ID" invisible="move_type != 'entry'" />
                            <field name="sh_xero_manual_journal_id" readonly="1" invisible="move_type != 'entry'" nolabel="1" />
                        </group>
                        <group>
                            <field name="sh_xero_config" readonly="1" options="{'no_open': True}" />
                            <field name="failure_reason" readonly="1" invisible="failure_reason in (False, None, '')" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <!-- VIEW: Search -->
    <record id="xero_invoice_exported_search_form" model="ir.ui.view">
        <field name="name">Xero Invoice Exported Search Form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <search>
                <group name="group" string="Group By">
                    <filter string="Xero Config" name="name" context="{'group_by' : 'sh_xero_config'}"/>
                </group>
            </search>
            <xpath expr="//search/filter[@name='myinvoices']" position="after">
                <filter string="Not Exported To Xero" name="xero_exported" domain="['|',('sh_xero_invoice_id', '=', False),('sh_xero_credit_note_id', '=', False)]"/>
            </xpath>
        </field>
    </record>

    <!--===================== Failed Log View =====================-->
    <record id='xero_invoice_failed_tree' model='ir.ui.view'>
        <field name="name">xero.invoice.failed.tree</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="state"/>
                <field name="failure_reason"/>
            </list>
        </field>
    </record>
</odoo>
