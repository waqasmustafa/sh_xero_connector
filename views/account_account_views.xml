<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="xero_account_exported_search_form" model="ir.ui.view">
        <field name="name">Xero Account Exported Search Form</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_search"/>
        <field name="arch" type="xml">
            <search>
                <group name="group" string="Group By">
                    <filter string="Xero Config" name="name" domain="[]" context="{'group_by' : 'sh_xero_config'}"/>
                </group>
            </search>
            <xpath expr="//search/filter[@name='activeacc']" position="after">
                <filter string="Not Exported To Xero" name="xero_exported" domain="[('sh_xero_account_id', '=', False)]"/>
            </xpath>
        </field>
    </record>
    <!-- Failed Log View -->
    <record id="xero_account_failed_tree" model='ir.ui.view'>
        <field name="name">xero.account.failed.tree</field>
        <field name="model">account.account</field>
        <field name="arch" type="xml">
            <list string="Chart of accounts">
                <field name="code"/>
                <field name="name"/>
                <field name="failure_reasons"/>
            </list>
        </field>
    </record>
</odoo>
