<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VIEW: Form -->
    <record id="sh_xero_product_normal_form_view" model="ir.ui.view">
        <field name="name">sh.xero.product.variant.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//sheet//notebook" position="inside">
                <page string="Xero" name="xero">
                    <group>
                        <group>
                            <field name="sh_xero_product_id" readonly="1" />
                            <field name="failure_reason" readonly="1" />
                        </group>
                        <group>
                            <field name="sh_xero_config" readonly="1" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
