<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='sh_xero_queue_tree' model='ir.ui.view'>
        <field name="name">sh.xero.queue.tree</field>
        <field name="model">sh.xero.queue</field>
        <field name="arch" type="xml">
            <list decoration-success="sh_current_state == 'done'" decoration-danger="sh_current_state == 'error'" >
                <field name="sh_queue_name"/>
                <field name="sh_id"/>
                <field name="queue_sync_date"/>
                <field name="sh_current_state"/>
                <field name="error" optional="hide" />
            </list>
        </field>
    </record>

    <record id="sh_xero_queue_search_view" model="ir.ui.view">
        <field name="name">xero.queue.search.view</field>
        <field name="model">sh.xero.queue</field>
        <field name="arch" type="xml">
            <search string="xero Queue">
                <field name="sh_queue_name"/>
                <field name="sh_id" />
                <field name="sh_current_state"/>
                <separator />
                <filter string="Draft" name="draft" domain="[('sh_current_state', '=', 'draft')]" />
                <filter string="Done" name="done" domain="[('sh_current_state', '=', 'done')]" />
                <filter string="Error" name="error" domain="[('sh_current_state', '=', 'error')]" />
                <group name="group" string="Group By">
                    <filter name="status_filter" string="Status" context="{'group_by':'sh_current_state'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="sh_xero_quotation_queue_action" model="ir.actions.act_window">
        <field name="name">Quotation Queue</field>
        <field name="res_model">sh.xero.queue</field>
        <field name="context">{
            'search_default_draft': 1,
            'create': False
        }</field>
        <field name="domain">[('queue_type', '=', 'quotation')]</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="sh_xero_connector.sh_xero_queue_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Quotation Queue
            </p>
        </field>
    </record>

