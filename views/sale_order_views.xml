<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="xero_sale_order_form" model="ir.ui.view">
        <field name="name">xero.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <!-- <xpath expr="//notebook/page[@name='other_information']/group/group[@name='sale_info']/field[@name='invoice_status']" position="after">
                <h2 class="text-primary mt-3 mb-2">Xero</h2>
                <field name="sh_xero_quote_number" readonly="1" />
                <field name="sh_xero_config" readonly="1" />
            </xpath> -->
            <xpath expr="//notebook" position="inside">
                <page name="xero" string="Xero">
                    <group>
                        <group>
                            <field name="sh_xero_quotation_id" readonly="1" />
                            <field name="sh_xero_quote_number" readonly="1" />
                        </group>
                        <group>
                            <field name="sh_xero_config" readonly="1" options="{'no_open': True}" />
                            <field name="failure_reason" readonly="1" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="xero_orders_exported_search_form" model="ir.ui.view">
        <field name="name">Xero Orders Exported Search Form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <search>
                <group name="group" string="Group By">
                    <filter string="Xero Config" name="name" domain="[]" context="{'group_by' : 'sh_xero_config'}"/>
                </group>
            </search>
            <xpath expr="//search/filter[@name='my_sale_orders_filter']" position="after">
                <filter string="Not Exported To Xero" name="xero_exported" domain="[('sh_xero_quotation_id', '=', False)]"/>
            </xpath>
        </field>
    </record>
    <!-- Failed Log Views -->
    <record id='xero_quotation_failed_tree' model='ir.ui.view'>
        <field name="name">xero.quotation.failed.tree</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <list string="Quotation">
                <field name="name" string="Number" readonly="1" decoration-bf="1"/>
                <field name="partner_id" readonly="1"/>
                <field name="state" decoration-success="state == 'sale' or state == 'done'" decoration-info="state == 'draft' or state == 'sent'" widget="badge" optional="show"/>
                <field name="failure_reason"/>
            </list>
        </field>
    </record>
</odoo>
