<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="xero_payment_exported_search_form" model="ir.ui.view">
        <field name="name">Xero Payments Exported Search Form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search/filter[@name='company']" position="after">
                <filter string="Not Exported To Xero" name="xero_exported" domain="[('sh_xero_payment_id', '=', False)]"/>
            </xpath>
        </field>
    </record>
</odoo>