<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- VIEW: Tree -->
    <record id='sh_xero_configuration_tree' model='ir.ui.view'>
        <field name="name">sh.xero.account.config.tree</field>
        <field name="model">sh.xero.account.config</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sh_odoo_acc_id" options="{'no_create': True}" required="1" />
                <field name="sh_xero_acc_id" options="{'no_create': True}" required="1" />
            </list>
        </field>
    </record>

    <!-- ACTION -->
    <record id="sh_xero_account_config_action" model="ir.actions.act_window">
        <field name="name">Xero Account Config</field>
        <field name="res_model">sh.xero.account.config</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                When you export Odoo journal entries to Xero, the Odoo accounts will be matched with their respective Xero accounts in the Xero manual journals
            </p>
        </field>
    </record>

</odoo>